<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_hcube_3"
    tools:context=".vue.TalentEntrepriseActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_slide_2"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_header_bm_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Morfin Maxime"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_header_bm_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/colorWhite"
        android:text="morfin.m@icloud.com"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"/>

</LinearLayout>